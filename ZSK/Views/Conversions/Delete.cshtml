@model ZSK.Models.Conversion

@{
    ViewData["Title"] = "Umrechnung löschen";
}

<div class="container mt-5" style="max-width: 700px;">
    <h1 class="fw-bold text-gradient mb-4">Umrechnung löschen</h1>

    <p class="text-muted">Bist du sicher, dass du diese Umrechnung löschen möchtest?</p>

    <div class="bg-white p-3 rounded shadow-sm mb-4">
        <dl class="row mb-0">
            <dt class="col-sm-4">Tier</dt>
            <dd class="col-sm-8">@Model.AnimalRate?.Name</dd>

            <dt class="col-sm-4">Richtung</dt>
            <dd class="col-sm-8">
                @if (Model.Direction == ConversionDirection.AnimalsToEuro)
                {
                    @:Tiere → Euro
                }
                else if (Model.Direction == ConversionDirection.EuroToAnimals)
                {
                    @:Euro → Tiere
                }
                else
                {
                    @:Unbekannt
                }
            </dd>

            <dt class="col-sm-4">Eurobetrag</dt>
            <dd class="col-sm-8">@Model.EuroAmount.ToString("C")</dd>

            <dt class="col-sm-4">Anzahl</dt>
            <dd class="col-sm-8">@Model.Quantity</dd>

            <dt class="col-sm-4">Wert/Tier</dt>
            <dd class="col-sm-8">@Model.UnitEuroAtCreation.ToString("C")</dd>

            <dt class="col-sm-4">Erstellt am</dt>
            <dd class="col-sm-8">@Model.CreatedAt.ToString("g")</dd>
        </dl>
    </div>

    <form asp-action="Delete" class="d-flex gap-2">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Löschen" class="btn btn-danger px-4" />
        <a asp-action="Index" class="btn btn-outline-secondary px-4">Abbrechen</a>
    </form>
</div>

