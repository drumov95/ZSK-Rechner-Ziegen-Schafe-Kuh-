@model ZSK.Models.AnimalRate

@{
    ViewData["Title"] = "Tier bearbeiten";
}

<div class="container mt-5" style="max-width: 600px;">
    <h1 class="fw-bold text-gradient mb-4">Tier bearbeiten</h1>

    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger">
                Das Namensfeld ist erforderlich.
            </span>
        </div>

        <div class="mb-4">
            <label asp-for="EuroValue" class="form-label">Euro-Wert</label>
            <input asp-for="EuroValue" class="form-control" />
            <span asp-validation-for="EuroValue" class="text-danger">
                Der Euro-Wert ist erforderlich.
            </span>
        </div>

        <div class="d-flex gap-2">
            <input type="submit" value="Speichern" class="btn btn-primary px-4" />
            <a asp-action="Index" class="btn btn-outline-secondary px-4">Zurück</a>
        </div>
    </form>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}