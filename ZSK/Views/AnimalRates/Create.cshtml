@model ZSK.Models.AnimalRate

@{
    ViewData["Title"] = "Neues Tier";
}

<div class="container mt-5" style="max-width: 600px;">
    <h1 class="fw-bold text-gradient mb-4">Neues Tier hinzufügen</h1>

    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" placeholder="z. B. Katze" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-4">
            <label asp-for="EuroValue" class="form-label">Euro-Wert</label>
            <input asp-for="EuroValue" class="form-control" placeholder="z. B. 12.50" />
            <span asp-validation-for="EuroValue" class="text-danger"></span>
        </div>

        <div class="d-flex gap-2">
            <input type="submit" value="Speichern" class="btn btn-primary px-4" />
            <a asp-action="Index" class="btn btn-outline-secondary">Zurück</a>
        </div>
    </form>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}