@model ZSK.Models.AnimalRate

@{
    ViewData["Title"] = "Tier löschen";
}

<div class="container mt-5" style="max-width: 600px;">
    <h1 class="fw-bold text-gradient mb-4">Tier löschen</h1>

    <p class="text-muted">Bist du sicher, dass du dieses Tier entfernen möchtest?</p>

    <div class="bg-white p-3 rounded shadow-sm mb-4">
        <dl class="row mb-0">
            <dt class="col-sm-4">Name</dt>
            <dd class="col-sm-8">@Model.Name</dd>

            <dt class="col-sm-4">Wert (€)</dt>
            <dd class="col-sm-8">@Model.EuroValue.ToString("C")</dd>
        </dl>
    </div>

    <form asp-action="Delete" class="d-flex gap-2">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Löschen" class="btn btn-danger px-4" />
        <a asp-action="Index" class="btn btn-outline-secondary px-4">Abbrechen</a>
    </form>
</div>
